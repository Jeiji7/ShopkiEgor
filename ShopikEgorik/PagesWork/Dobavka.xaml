<Page x:Class="ShopikEgorik.PagesWork.Dobavka"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopikEgorik.PagesWork"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dobavka">

    <Grid Background="Lavender">
        <StackPanel Orientation="Vertical">
            <StackPanel >
                <Button Click="Button_Click">
                    Добавить
                </Button>
                <Image x:Name="TestImg" Height="334" Margin="10"></Image>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock FontSize="20">Название</TextBlock>
                <TextBox x:Name="NameTB" Width="100"></TextBox>
                <TextBlock FontSize="20">Стоимость</TextBlock>
                <TextBox x:Name="PriseTB" Width="100"></TextBox>
                <ComboBox x:Name="TypeCBDob" DisplayMemberPath="Name_type" Width="100">
                    
                </ComboBox>
                <Button Click="Button_Click_1">
                    Продолжить
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
